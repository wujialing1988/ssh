<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
        "http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>

	<!-- 测试 -->
	<package name="test" extends="st" namespace="/test">
		<action name="*" class="com.xx.action.FreeMarkerTestAction" method="{1}">
			<result name="success" type="freemarker">/WEB-INF/pages/template/{1}.ftl</result>
		</action>
	</package>
	
	<!-- 附件上传 -->
	<package name="attach" extends="st" namespace="/attach">
		<action name="toAttach" class="com.xx.action.AttachAction" method="toAttach">
			<result name="success">/WEB-INF/pages/attach/attach.jsp</result>
		</action>
		<action name="*" class="com.xx.action.AttachAction" method="{1}">
		</action>
	</package>
	
	
</struts>
